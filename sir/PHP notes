—————————————————————————————————

Anonym function - use($value) , array_map($array), array_filter();

$soyad = "Akcay";

function filtrele($isim){
    global $soyad;
    return $isim . " " . $soyad;
}

$arr = ["Enver", "Umut", "Luna"];
$arr = array_map(function($isim) use($soyad){
    return $isim . " " . $soyad;
} ,$arr);

—————————————————————————————————

    function listele($categories, $parent = 0){

        echo '<ul>';
        foreach($categories as $cat) {
            if($cat['parent'] == $parent){
                echo  '<li>' . $cat['ad'];
                echo listele($categories, $cat['id']);
                echo '</li>';
            }
        }
        echo '</ul>';
    }

