EXPLAIN users
DESCRIBE users
SHOW FIELDS FROM users
SHOW FIELDS IN db
SELECT * FROM information_schema.TABLES where TABLE_SCHEMA = ‘db name’

SELECT * FROM users ORDER BY id DESC LIMIT 2

SELECT sehir, MIN(Maas) as Minimum, MAX(Maas) as MAXIMUM, Count(id) as Kisiler
FROM calisanlar 
GROUP BY sehir 
HAVING Minimum > 2000

SELECT meslek, count(id) as toplam FROM calisanlar GROUP BY meslek

SELECT * FROM calisanlar WHERE id NOT IN (5,6,7)

SELECT * FROM calisanlar 
WHERE meslek IN (SELECT meslek FROM meslekler)

SELECT * FROM diziler 
WHERE FIND_IN_SET(2, turler). - turlerin icinde 2 olanlari bul

SELECT * FROM calisanlar
WHERE maas BETWEEN 2000 AND 3000

SELECT * FROM konular
INNER JOIN uyeler ON uyeler.uye_id = konular.uye_id                        - LEFT JOIN , RIGHT JOIN
INNER JOIN kategoriler ON kategoriler.id = konular.kategori_id























































